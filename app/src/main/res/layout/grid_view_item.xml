<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemID"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size110dp"
        android:layout_marginStart="@dimen/size10dp"
        android:layout_marginEnd="@dimen/size10dp"
        android:layout_marginTop="@dimen/size20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nameFish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/size10dp"
            android:layout_marginEnd="@dimen/size10dp"
            android:textSize="@dimen/font16sp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/shadowIconFish"
            android:layout_marginStart="@dimen/size10dp"
            android:layout_marginEnd="@dimen/size10dp"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_marginBottom="@dimen/size10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

</LinearLayout>